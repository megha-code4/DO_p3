#!/usr/bin/env groovy
pipeline{
  agent any


  stages{
    stage('compile'){
      steps{
        script{
          sh 'mvn compile'
        }
      }
    }
    stage('build'){
      steps{
        script{
          echo "building the application...."
        }
      }
    }
    stage('test'){
      steps{
        script{
          echo "testing the application...."
        }
      }
    }
    stage('deploy'){
      steps{
        script{
          echo "deploying the application...."
        }
      }
    }
  }
}
