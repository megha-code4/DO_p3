#!/usr/bin/env groovy
pipeline{
  agent any
tools {
    maven 'Maven' // This should match the name you provided in Global Tool Configuration
}
  stages{
    stage('compile'){
      steps{
        script{
          bat 'mvn compile'
        }
      }
    }
    stage('build'){
      steps{
        script{
          echo "building the application...."
        }
      }
    }
    stage('test'){
      steps{
        script{
          echo "testing the application...."
        }
      }
    }
    stage('deploy'){
      steps{
        script{
          echo "deploying the application...."
        }
      }
    }
  }
}
