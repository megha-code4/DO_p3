#!/usr/bin/env groovy
pipeline{
  agent any
tools {
        // Define the Maven tool used in your Jenkins installation
        maven 'Maven 3.9.8' // Adjust the Maven version based on your Jenkins configuration
    }

  stages{
    stage('compile'){
      steps{
        script{
          bat 'mvn compile'
        }
      }
    }
    stage('build'){
      steps{
        script{
          echo "building the application...."
        }
      }
    }
    stage('test'){
      steps{
        script{
          echo "testing the application...."
        }
      }
    }
    stage('deploy'){
      steps{
        script{
          echo "deploying the application...."
        }
      }
    }
  }
}
